<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardViewMyStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_CardVieW</item>
        <item name="cardElevation">@dimen/cardElevation</item>
        <item name="cardCornerRadius">@dimen/cardCornerRadius</item>
    </style>

    <style name="ToolbarBlueContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/Blue</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="ButtonBlueMyStyle" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_Button</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:textColor">@color/Blue</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="cornerRadius">@dimen/button_cornerRadius</item>
        <item name="strokeColor">@color/Blue</item>
        <item name="strokeWidth">@dimen/button_strokeWidth</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="TextTitleMyStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/Blue</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColorHint">@color/Grey</item>
    </style>

    <style name="TextSubtitleMyStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColorHint">@color/Grey</item>
    </style>

    <style name="TextNormalMyStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:gravity">fill_horizontal</item>
        <item name="android:textColorHint">@color/Grey</item>
    </style>

    <style name="InputTextFieldMyStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/Blue</item>
        <item name="android:textColorHint">@color/Grey</item>
        <item name="android:minHeight">@dimen/minHeight</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

</resources>