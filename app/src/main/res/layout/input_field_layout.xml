<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        style="@style/CardViewMyStyle"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/white">

        <EditText
            android:id="@+id/editTextET"
            style="@style/InputTextFieldMyStyle"
            android:hint="@string/InputTextFieldMyStyle_hint"></EditText>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonBT"
        style="@style/ButtonBlueMyStyle"
        android:layout_weight="1"
        android:text="Отправить"></com.google.android.material.button.MaterialButton>


</LinearLayout>